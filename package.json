        "test:push": "tsx test/push-data.test.ts",
        "test:get": "tsx test/get-data.test.ts",
        "test:delete": "tsx test/delete-data.test.ts",
        "test:list": "tsx test/list-data.test.ts",
        "test:reload": "tsx test/reload-db.test.ts",
        "test:manual": "tsx test/create-manual-data.test.ts",
        "test:batch:push": "tsx test/batch-push.test.ts",
        "test:batch:get": "tsx test/batch-get.test.ts",
        "test:batch:delete": "tsx test/batch-delete.test.ts",
        "test:behaviors": "tsx test/behaviors.test.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
    },
